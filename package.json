{
    "name": "another-copy-reference-like-intellij",
    "displayName": "%extension.copyReference.title%",
    "description": "%extension.copyReference.description%",
    "version": "1.2.0",
    "publisher": "xuezhouyang",
    "repository": {
        "type": "git",
        "url": "https://github.com/xuezhouyang/another-copy-reference-like-intellij.git"
    },
    "license": "MIT",
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "copy",
        "reference",
        "intellij",
        "java",
        "kotlin"
    ],
    "icon": "images/icon.png",
    "galleryBanner": {
        "color": "#2196F3",
        "theme": "dark"
    },
    "activationEvents": [
        "onLanguage:java",
        "onLanguage:kotlin",
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact",
        "onLanguage:python",
        "onLanguage:markdown",
        "onLanguage:html",
        "onLanguage:xml",
        "onLanguage:yaml",
        "onLanguage:dart",
        "onCommand:extension.copyReference"
    ],
    "main": "./dist/extension.js",
    "sideEffects": false,
    "contributes": {
        "commands": [
            {
                "command": "extension.copyReference",
                "title": "%extension.copyReference.title%"
            },
            {
                "command": "extension.copyReferenceWithFormat",
                "title": "Copy Reference: Choose Format"
            },
            {
                "command": "extension.copyReference.feedback",
                "title": "Copy Reference: Provide Feedback"
            }
        ],
        "menus": {
            "editor/context": [
                {
                    "command": "extension.copyReference",
                    "group": "navigation"
                },
                {
                    "command": "extension.copyReferenceWithFormat",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "command": "extension.copyReference",
                "key": "alt+shift+c",
                "mac": "cmd+shift+c",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.copyReferenceWithFormat",
                "key": "alt+shift+f",
                "mac": "cmd+shift+f",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "title": "Copy Reference",
            "properties": {
                "copyReference.includeLineNumbers": {
                    "type": "boolean",
                    "default": false,
                    "description": "%configuration.includeLineNumbers.description%"
                },
                "copyReference.preferShortPaths": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.preferShortPaths.description%"
                },
                "copyReference.useFrameworkDetection": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.useFrameworkDetection.description%"
                },
                "copyReference.cache.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.cache.enabled.description%"
                },
                "copyReference.cache.maxSize": {
                    "type": "number",
                    "default": 50,
                    "minimum": 10,
                    "maximum": 500,
                    "description": "%configuration.cache.maxSize.description%"
                },
                "copyReference.cache.ttl": {
                    "type": "number",
                    "default": 300000,
                    "minimum": 60000,
                    "maximum": 3600000,
                    "description": "%configuration.cache.ttl.description%"
                },
                "copyReference.cache.evictionStrategy": {
                    "type": "string",
                    "default": "adaptive",
                    "enum": ["lru", "lfu", "fifo", "adaptive"],
                    "enumDescriptions": [
                        "%configuration.cache.evictionStrategy.lru.description%",
                        "%configuration.cache.evictionStrategy.lfu.description%",
                        "%configuration.cache.evictionStrategy.fifo.description%",
                        "%configuration.cache.evictionStrategy.adaptive.description%"
                    ],
                    "description": "%configuration.cache.evictionStrategy.description%"
                },
                "copyReference.cache.maxMemoryMB": {
                    "type": "number",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 100,
                    "description": "%configuration.cache.maxMemoryMB.description%"
                },
                "copyReference.telemetry.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.telemetry.enabled.description%"
                },
                "copyReference.handlers.javascript.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.handlers.javascript.enabled.description%"
                },
                "copyReference.handlers.python.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.handlers.python.enabled.description%"
                },
                "copyReference.handlers.markdown.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.handlers.markdown.enabled.description%"
                },
                "copyReference.handlers.html.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.handlers.html.enabled.description%"
                },
                "copyReference.handlers.yaml.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "%configuration.handlers.yaml.enabled.description%"
                },
                "copyReference.customPatterns": {
                    "type": "array",
                    "default": [],
                    "description": "%configuration.customPatterns.description%",
                    "items": {
                        "type": "object",
                        "properties": {
                            "language": {
                                "type": "string",
                                "description": "Language ID to apply this pattern to"
                            },
                            "pattern": {
                                "type": "string",
                                "description": "Regular expression pattern to match"
                            },
                            "template": {
                                "type": "string",
                                "description": "Template for generating the reference"
                            }
                        }
                    }
                },
                "copyReference.defaultFormat": {
                    "type": "string",
                    "default": "qualified",
                    "enum": ["qualified", "withLine", "filePath", "markdown", "javadoc", "stackTrace"],
                    "enumDescriptions": [
                        "Qualified reference: com.example.Class#method",
                        "With line number: com.example.Class#method:42",
                        "File path: src/main/Class.java:42",
                        "Markdown link: [Class#method](src/main/Class.java#L42)",
                        "Javadoc style: {@link Class#method()}",
                        "Stack trace style: at Class.method(Class.java:42)"
                    ],
                    "description": "Default reference format to use"
                },
                "copyReference.showFormatPicker": {
                    "type": "boolean",
                    "default": false,
                    "description": "Show format picker every time when copying reference"
                },
                "copyReference.rememberLastFormat": {
                    "type": "boolean",
                    "default": true,
                    "description": "Remember the last used format for each language"
                },
                "copyReference.languageFormats": {
                    "type": "object",
                    "default": {},
                    "description": "Language-specific default formats (e.g., {\"java\": \"qualified\", \"python\": \"dotted\"})",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "copyReference.customFormats": {
                    "type": "object",
                    "default": {},
                    "description": "Custom format templates using placeholders like ${package}, ${class}, ${method}, ${file}, ${line}",
                    "additionalProperties": {
                        "type": "string"
                    }
                },
                "copyReference.includeFilePath": {
                    "type": "boolean",
                    "default": false,
                    "description": "Include file path in the reference by default"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run build:prod",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js",
        "test:unit": "npm run compile && mocha ./out/test/**/*.test.js",
        "test:coverage": "npm run compile && nyc --reporter=html --reporter=text mocha ./out/test/**/*.test.js",
        "test:watch": "npm run compile && mocha ./out/test/**/*.test.js --watch",
        "build:prod": "webpack --config webpack.config.js",
        "package": "vsce package",
        "package:prod": "npm run build:prod && vsce package",
        "publish": "vsce publish",
        "prepackage": "npm run build:prod"
    },
    "devDependencies": {
        "@types/vscode": "^1.74.0",
        "@types/node": "^16.x.x",
        "@types/mocha": "^10.0.0",
        "@types/glob": "^8.0.0",
        "@typescript-eslint/eslint-plugin": "^5.x.x",
        "@typescript-eslint/parser": "^5.x.x",
        "eslint": "^8.x.x",
        "typescript": "^5.0.0",
        "@vscode/vsce": "^2.24.0",
        "@vscode/test-electron": "^2.3.0",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "glob": "^8.0.3",
        "webpack": "^5.88.0",
        "webpack-cli": "^5.1.0",
        "ts-loader": "^9.4.0",
        "terser-webpack-plugin": "^5.3.0"
    },
    "l10n": "./package.nls.json",
    "l10n.bundles": {
        "en": "./package.nls.json",
        "zh-cn": "./package.nls.zh-cn.json",
        "es": "./package.nls.es.json",
        "hi": "./package.nls.hi.json",
        "ar": "./package.nls.ar.json",
        "pt": "./package.nls.pt.json",
        "ru": "./package.nls.ru.json",
        "ja": "./package.nls.ja.json",
        "fr": "./package.nls.fr.json",
        "de": "./package.nls.de.json",
        "bo": "./package.nls.bo.json",
        "ug": "./package.nls.ug.json"
    }
}
